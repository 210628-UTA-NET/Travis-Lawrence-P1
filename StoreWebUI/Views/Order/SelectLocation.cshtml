@model IEnumerable<StoreWebUI.Models.LocationVM>
@{ 
    var _custId = Context.Request.Query["p_id"];
    int custId = Convert.ToInt32(_custId);

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>Select Store</h1>

    <table class="table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var store in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(mL => store.LocationId)</td>
                    <td>@Html.DisplayFor(mL => store.Name)</td>
                    <td>@Html.DisplayFor(mL => store.Address)</td>
                    <td>@Html.ActionLink("Select", "AddItem", new { p_id = custId, storeId = store.LocationId}, new { @style = "color:white;", @class = "btn btn-primary" })</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>