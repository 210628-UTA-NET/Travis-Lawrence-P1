@model IEnumerable<StoreWebUI.Models.LineItemVM>
@{ 
    int custId = Convert.ToInt32(Context.Request.Query["p_id"]);
    int storeId = Convert.ToInt32(Context.Request.Query["storeId"]);
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1 class="text-center">Review Order</h1>

    <table class="table-striped">
        <thead>
            <tr>
                <th>Item</th>
                <th>Amount</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(mI => item.Name)</td>
                    <td>@Html.DisplayFor(mI => item.Quantity)</td>
                    <td>@Html.DisplayFor(mI => item.Price)</td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        @Html.ActionLink("Confirm", "ConfirmOrder", new { p_id = custId, storeId = storeId }, new { @style = "color:white;", @class = "btn btn-primary" })
    </div>
</body>
</html>